# skip startup message
startup_message off

# automatically detach on hangup
autodetach on

defscrollback 10000

# look and feel
caption always = "%{= bb}%{+b w}%n %t %h %=%l %H %c"
hardstatus alwayslastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%<"

activity "Activity in %t(%n)"

#shelltitle "shell"
shell -$SHELL
